@using StreletzNoticeBoard.Areas.Admin.Components
@model StreletzNoticeBoard.Areas.Admin.Components.UserViewModel
@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование</h2>
<h4>Пользователь</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                @Html.DropDownList("Role", Model.Roles.Select(x => new SelectListItem() { Value = x.Name, Text = x.TextName(), Selected = (x.Id == Model.Role) }), new { id = 2 })
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку пользователей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
